<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup Label="Configuration">
    <RootNamespace>Org.BouncyCastle</RootNamespace>
    <AssemblyName>BouncyCastle.Crypto</AssemblyName>
    <AssemblyVersion>1.8.2</AssemblyVersion>
    <TargetFrameworks>netstandard1.3;netstandard2.0;net20</TargetFrameworks>
    <GenerateAssemblyInfo>false</GenerateAssemblyInfo>
    <DocumentationFile>BouncyCastle.Crypto.xml</DocumentationFile>
    <NoWarn>1701;1702;1705;1591</NoWarn>
  </PropertyGroup>
  <PropertyGroup Condition=" $(TargetFramework) == 'netstandard1.3' Or $(TargetFramework) == 'netstandard2.0' ">
    <DefineConstants>NETCORE;PORTABLE;NEW_REFLECTION;NO_THREADS</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition=" $(TargetFramework) == 'net20' ">
    <DefineConstants>NETFX</DefineConstants>
  </PropertyGroup>
  <ItemGroup>
    <EmbeddedResource Include="**\*.resx" />
  </ItemGroup>
  <ItemGroup>
    <Compile Remove="test\**" />
    <EmbeddedResource Remove="test\**" />
  </ItemGroup>
  <ItemGroup Condition=" $(TargetFramework) == 'netstandard1.3' ">
    <PackageReference Include="System.Reflection.TypeExtensions" Version="4.4" />
    <PackageReference Include="System.Reflection" Version="4.3" />
  </ItemGroup>
  <ItemGroup Condition=" $(TargetFramework) == 'net20' " />
</Project>